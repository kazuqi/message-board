<%= form_for (Message.new) , :html => {:class => 'form-horizontal'}  do |f| %>

<%# 「学籍番号」という項目を追加してみようと思ったがエラーとなったので一旦削除 %>

<div class="form-group">
    <label class="col-sm-2 control-label">名前：</label>
    <div class="col-sm-10">
        <%= f.text_field :name %>
    </div>
</div>

<div class="form-group">
    <label class="col-sm-2 control-label">内容：</label>
    <div class="col-sm-10">
        <%= f.text_area :body %>
    </div>
</div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
</div>

<% end %>


  <div id="panel-margin" class="panel panel-primary">
  <div class="panel-heading">
      <h3 class="panel-title">メッセージ一覧</h3>
  </div>
  </div>

  <div class="panel-heading">
      <ul>
          <% @messages.each do |message| %>
          <li>
              <%= message.id %>  <%# gakuseki %> 
              <span class="label label-info"><%= message.name %></span>
              <%= message.body %>
          </li>
          <% end %>
       </ul>
  </div>
</div>

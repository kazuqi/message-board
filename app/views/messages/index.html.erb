<div class="panel panel-default">
    
<!-- 16:9 aspect ratio -->

<div class="embed-responsive embed-responsive-16by9">
    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/lvtfD_rJ2hE"></iframe>
</div>
<br />

<h3>この動画を見て感じたことを投稿してください。</h3>
<br />

<%= form_for (@message) , :html => {:class => 'form-horizontal'}  do |f| %>

  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

<div class="form-group">
    <label class="col-sm-2 control-label">名前：</label>
    <div class="col-sm-10">
        <%= f.text_field :name %>
    </div>
</div>

<div class="form-group">
    <label class="col-sm-2 control-label">内容：</label>
    <div class="col-sm-10">
        <%= f.text_area :body %>
    </div>
</div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
</div>

<% end %>


  <div id="panel-margin" class="panel panel-primary">
  <div class="panel-heading">
      <h3 class="panel-title">メッセージ一覧</h3>
  </div>
  </div>

  <div class="panel-heading">
      <ul>
          <% @messages.each do |message| %>
          <li>
              <%= message.id %>  <%# gakuseki %> 
              <span class="label label-info"><%= message.name %></span>
              <%= message.body %>
          </li>
          <% end %>
       </ul>
  </div>
</div>
